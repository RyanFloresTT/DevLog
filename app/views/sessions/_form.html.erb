<%= form_with(model: [@project, session], class: "space-y-6") do |form| %>
  <% if session.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
      <!-- ... error messages ... -->
    </div>
  <% end %>

  <div>
    <%= form.label :name, "What are you working on?", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :opening_notes, "Opening Notes", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :opening_notes, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <%= form.hidden_field :started_at, value: Time.current %>

  <div class="pt-4">
    <%= form.submit "Start Session", class: "inline-flex justify-center rounded-md border border-transparent bg-blue-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  </div>
<% end %>