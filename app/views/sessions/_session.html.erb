<div id="<%= dom_id session %>" class="bg-gray-50 p-6 rounded-lg shadow-lg space-y-4">
  <!-- Dynamic Header -->
  <h1 class="text-center text-6xl py-4 permanent-marker-regular text-gray-900">
    <% if session.ended_at.nil? %>
      I'm working on
    <% else %>
      I worked on
    <% end %>
  </h1>

  <!-- Session Name -->
  <h2 class="text-center text-5xl py-2 font-sketch text-gray-800 mb-6">
    <%= session.name %>
  </h2>

  <!-- Date and Status -->
  <div class="flex justify-between items-center py-4 text-lg font-typewriter text-gray-700">
    <!-- Start Date -->
    <span>
      <%= session.started_at.strftime("%B %d, %Y") %>
    </span>

    <!-- Status or Duration -->
    <span>
      <% if session.ended_at.nil? %>
        In Progress (<%= time_ago_in_words(session.started_at) %> ago)
      <% else %>
        Duration: <%= distance_of_time_in_words(session.started_at, session.ended_at) %>
      <% end %>
    </span>
  </div>
</div>