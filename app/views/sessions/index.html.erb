
<% content_for :title, "Sessions" %>

<div class="container mx-auto px-4 py-8">
  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="paper-effect mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Sessions</h1>

    <div id="sessions" class="space-y-4">
      <% @sessions.each do |session| %>
        <div class="paper-texture p-4">
          <%= render session %>
          <%= link_to "Show this session", session,
                      class: "mt-2 inline-block px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 rounded-lg transition-colors duration-150 text-sm" %>
        </div>
      <% end %>
    </div>

    <button type="button"
            class="mt-6 inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors duration-150"
            data-controller="modal"
            data-modal-url-value="<%= quick_new_project_sessions_path(@project) %>"
            data-action="click->modal#open">
      Start New Session
    </button>

  </div>
</div>

<div id="modal" data-modal-target="container"></div>