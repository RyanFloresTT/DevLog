<div class="container mx-auto px-4 py-8">
  <div class="max-w-3xl mx-auto">
    <div class="mb-8">
      <%= render @session %>
    </div>

    <div class="mb-8 flex justify-between">
      <div>
        <%= link_to "Back To Project", project_path(@project)%>
      </div>
      <div>
        <%= button_to "Delete Session", project_session_path(@project, @session),
                    method: :delete,
                    form: { data: { turbo_confirm: "Are you sure you want to delete this session?" } }%>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6 mb-8">
      <h2 class="font-semibold mb-2">Opening Notes</h2>
      <div class="prose"><%= @session.opening_notes %></div>
    </div>

    <div class="mb-8">
      <div id="entries" class="space-y-4">
        <% if @session.ended_at.nil? %>
          <%= form_with(model: [@project, @session, @session.entries.build], class: "bg-white rounded-lg shadow p-6 mb-4") do |form| %>
            <div>
              <%= form.text_area :response, rows: 3, placeholder: "What are you working on?",
                                 class: "mt-1 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
            </div>
            <%= form.submit "Update", class: "mt-3 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
          <% end %>
        <% end %>

        <% if @session.ended_at.nil? %>
          <%= form_with(model: [@project, @session], class: "bg-white rounded-lg shadow p-6 mb-4") do |form| %>
            <div>
              <%= form.text_area :closing_notes, rows: 3, placeholder: "Closing notes for this session.",
                                 class: "mt-1 p-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
              <%= form.hidden_field :ended_at, value: Time.current %>
            </div>
            <%= form.submit "End Session", class: "mt-3 bg-red-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
          <% end %>
        <% end %>

        <% @session.entries.order(created_at: :desc).each do |entry| %>
          <!-- TODO: Put this in, and render _entry.html.erb-->
          <div class="bg-white rounded-lg shadow p-4 flex justify-between items-center">
            <div>
              <p class="text-gray-600"><%= entry.response %></p>
              <p class="mt-1 text-sm text-gray-500"><%= time_ago_in_words(entry.created_at) %> ago</p>
            </div>
            <div class="flex">
              <div class="px-2 text-2xl">
                <%= link_to "📝", edit_project_session_entry_path(@project, @session, entry) %>
              </div>
              <div class="px-2 text-2xl">
                <%= button_to "❌",
                              [@project, @session, entry],
                              method: :delete,
                              form: { data: { turbo_confirm: "Are you sure you want to delete this entry?" } } %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>