
<%= form_with(model: project, class: "space-y-6") do |form| %>
  <% if project.errors.any? %>
    <div class="bg-red-50 p-4 rounded-lg border border-red-200 mb-6">
      <h2 class="text-red-700 text-lg font-medium mb-2">
        <%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:
      </h2>

      <ul class="list-disc list-inside text-red-600">
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-xl font-typewriter font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name,
                        class: "w-full px-3 py-2 border font-typewriter border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-xl font-typewriter font-medium text-gray-700 mb-1" %>
    <%= form.text_area :description,
                       rows: 6,
                       class: "w-full px-3 py-2 border border-gray-300 font-typewriter rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="flex justify-end">
    <%= form.submit (project.new_record? ? "Create" : "Update"), class: "px-4 py-2 text-2xl font-sketch text-blue-600 rounded-lg hover:text-slate-900 transition-colors duration-150" %>
  </div>
<% end %>