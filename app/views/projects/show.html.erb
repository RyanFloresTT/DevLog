
<% if notice %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
    <%= notice %>
  </div>
<% end %>

<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to projects_path, class: "inline-flex items-center text-red-600 font-notes hover:text-gray-800" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Back to projects
    <% end %>
  </div>

  <div class="bg-white paper-effect rounded-lg shadow-md p-6 mb-8">
    <div class="flex justify-between items-start mb-6">
      <h1 class="text-6xl font-typewriter font-bold text-gray-900"><%= @project.name %></h1>
      <div class="flex items-center space-x-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" viewBox="0 0 20 20" fill="currentColor" aria-label="Edit">
            <%= link_to edit_project_path(@project), class: "text-gray-500 hover:text-gray-800" do %>
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
          </svg>
        <% end %>
        <%= link_to @project, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this project?" }, class: "text-red-500 hover:text-red-800" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" viewBox="0 0 20 20" fill="currentColor" aria-label="Delete">
            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        <% end %>
      </div>
    </div>

    <%= render @project %>
  </div>

  <div class="bg-white paper-effect rounded-lg shadow-md p-6">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-6xl font-typewriter font-bold text-gray-900">Sessions</h2>
      <div class="flex items-center space-x-4">
        <%= link_to new_project_session_path(@project),
                    class: "inline-flex items-center px-4 py-2 text-blue-600 font-notes text-2xl rounded-lg transition-colors duration-150" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
          Start New Session
        <% end %>
      </div>
    </div>

    <div class="divide-y divide-gray-200">
      <% @project.sessions.each do |session| %>
        <%= link_to project_session_path(@project, session),
                    class: "block py-4 hover:bg-gray-50 transition-colors duration-150 first:pt-0 last:pb-0" do %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mr-3" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
              </svg>
              <span class="font-sketch text-2xl text-gray-700"><%= session.name %></span>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>