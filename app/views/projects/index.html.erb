
<% if notice %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
    <%= notice %>
  </div>
<% end %>

<% content_for :title, "Projects" %>

<div class="container mx-auto px-4 py-8">
  <h1 class="justify-self-center font-notes text-6xl font-bold text-gray-900">DevLog</h1>
  <div class="flex justify-end items-center mb-8">
    <%= link_to new_project_path,
                class: "inline-flex items-center px-4 py-2 text-blue-600 font-notes text-2xl rounded-lg transition-colors duration-150" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
      </svg>
      New Project
    <% end %>
  </div>

  <div id="projects" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @projects.each do |project| %>
      <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200">
        <div class="p-6">
          <h1 class="text-2xl"><%= project.name %></h1>
          <%= render project %>
          <%= link_to "View Details", project,
                      class: "mt-4 inline-block px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 rounded-lg transition-colors duration-150 text-sm" %>
        </div>
      </div>
    <% end %>
  </div>
</div>